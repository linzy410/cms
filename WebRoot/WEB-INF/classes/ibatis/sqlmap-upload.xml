<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">
<sqlMap namespace="upload">
	<typeAlias alias="upload" type="com.his.cms.model.UploadFile" />

	<select id="findListByType" parameterClass="int" resultClass="upload">
		select * from UploadFile where type=#type# order by id desc
	</select>
	
	<insert id="addUploadFile" parameterClass="upload">
		insert into UploadFile (fileName,filePath,uploadName,createTime,type)
		 values (#fileName#,#filePath#,#uploadName#,#createTime#,#type#)
	</insert>

</sqlMap>
